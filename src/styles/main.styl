.container
  padding-top: 100px

.calc.row
  display: block
  width: 320px
  margin: 0 auto


  .buttons
    border: 1px solid #eee
    box-shadow: 0px 1px 2px #555;
    border-radius: 5px
    margin: 5px
    display: block
    width: 100%
    height: 100%
    text-align: center

    &:active
      box-shadow: 1px 2px 0px #555;

  .buttons.control
    background-color: #ddd

  .answer 
    margin: 3px
    padding: 5px
    background-color: #eee
    border-radius: 4px


