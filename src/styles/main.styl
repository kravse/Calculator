body
  background: #FF9933

.container
  padding-top: 100px

.calc.row
  display: block
  width: 320px
  margin: 0 auto

  .column
    margin: 10px 0

  .column.answer
    padding: 0
    margin: 0 4% 10px
    width: 92%
  

  .buttons
    border: 1px solid #eee
    box-shadow: 0px 1px 2px #555;
    border-radius: 5px
    display: block
    width: 100%
    height: 100%
    text-align: center
    font-family: digital-7_monomono
    font-size: 25px
    padding: 15px 20px 10px 18px
    background: #fff

    &:active
      box-shadow: 1px 2px 0px #555;

  .buttons.control
    background-color: #ddd

  .answer 
    font-family: digital-7_monomono
    margin: 3px
    padding: 5px
    background-color: #eee
    border-radius: 4px
    color: #00CC33
    font-size: 40px


